USER_HUB_DB_POSTGRES_CONNECTION_STRING=Host=host.docker.internal;Port=5432;Database=night-tasker-user-hub;User ID=postgres;Password=postgres;Include Error Detail=true;

# rabbitmq settings
RABBITMQ_USERNAME=guest
