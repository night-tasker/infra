# api gateway settings
IDENTITY_MICROSERVICE_PATH=host.docker.internal
USER_HUB_MICROSERVICE_PATH=host.docker.internal

# identity microservice settings
IDENTITY_DB_POSTGRES_CONNECTION_STRING=Host=host.docker.internal;Port=5432;Database=night-tasker-identity;User ID=postgres;Password=postgres;Include Error Detail=true;

